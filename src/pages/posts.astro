---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';

// Use Astro.glob() to fetch all posts, and then sort them by date.
const posts = (await Astro.glob('./blog/*.{md,mdx}')).sort(
	(a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);

	console.log(new Date('7 October 2022 9:00 UTC+11').toDateString())
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title="The Codey Verse Blog Posts" description="All the blog posts for a blog that I am unsing to document the process of building a open source website called Codey Verse where people can learn to code" />
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
			ul li {
				display: flex;
			}
		ul li time {
				flex: 0 0 130px;
				font-style: italic;
				color: #595959;
			}
			ul li a:visited {
				color: #8e32dc;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{posts.map((post) => (
						<li>
							<time datetime={post.frontmatter.pubDate}>
								{new Date(post.frontmatter.pubDate).toDateString()
								}
							</time>
							<a href={post.url}>{post.frontmatter.title}</a>
						</li>
					))}
				</ul>
			</section>
		</main>
	</body>
</html>
